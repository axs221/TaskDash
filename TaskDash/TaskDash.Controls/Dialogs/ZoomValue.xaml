<Window x:Class="TaskDash.CustomControls.ZoomValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:TaskDashControls="clr-namespace:TaskDash.CustomControls" Title="Edit Value" Height="401" Width="489"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TaskDashControls:TextBoxWithDescription Grid.Row="0" Grid.Column="0"
            x:Name="textBoxEditableValue" 
            Text="{Binding EditableValue, Mode=TwoWay}" LabelText="Editable Value">
        </TaskDashControls:TextBoxWithDescription>
    </Grid>
</Window>
