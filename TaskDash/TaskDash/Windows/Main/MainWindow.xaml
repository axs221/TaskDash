<Window x:Class="TaskDash.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:UserControls="clr-namespace:TaskDash.UserControls;assembly=TaskDash.UserControls" xmlns:Main="clr-namespace:TaskDash.Windows.Main;assembly=TaskDash.UserControls" Title="TaskDash!" Height="600" Width="1024" 
        Closing="OnWindowClosing" Closed="OnWindowClosed"
        KeyDown="OnWindowKeyDown"
        StateChanged="OnStateChanged" IsVisibleChanged="OnIsVisibleChanged">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <ToolBar Grid.Row="0" Grid.ColumnSpan="5">
            <Button x:Name="SaveButton" Click="OnSaveButtonClick">Save</Button>
            <Button x:Name="AccordianButton" Click="OnAccordianButtonClick">Dock</Button>
        </ToolBar>

        <Main:TaskListView Grid.Row="1" Grid.Column="0" />
        <Main:TaskDetailsView Grid.Row="1" Grid.Column="1" />    
    </Grid>
</Window>